<Window x:Class="STMLEditor.SaveAsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STMLEditor"
        mc:Ignorable="d"
        Title="SaveAs" Height="230" Width="550">
    <Border Padding="30" >
      <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
          <TextBlock Text="Project Title" Margin="0,0,50,0"/>
          <TextBox Text="{Binding ProjectTitle, UpdateSourceTrigger=PropertyChanged}" MinWidth="300"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
          <TextBlock Text="Project Path" Margin="0,0,50,0"/>
          <TextBox Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}" MinWidth="300" Margin="0,0,20,0"/>
          <Button Content="..." Click="OpenFileDialog" MinWidth="30"/>
        </StackPanel>
      
        <Button Content="Save" Click="Save" Width="50" Margin="0,50,0,0"/>
      </StackPanel>
    </Border>
</Window>
